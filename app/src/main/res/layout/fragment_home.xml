<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.khoa.demotoeictest.screen.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screen.home.HomeFragment"
        android:background="@color/bg"
        android:transitionGroup="true">

        <androidx.core.widget.NestedScrollView
            android:layout_marginBottom="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_dark_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="15dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nghe_hieu"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginBottom="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:background="@drawable/bg_white"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <include
                                layout="@layout/custom_item_parts"
                                app:type="@{viewModel.part1Title}"
                                app:partTitle="@{viewModel.part1Title}"
                                app:partDesc="@{viewModel.part1Title}"
                                app:iconParts="@{viewModel.part1Icon}"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/bg_white"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:transitionName="part2"
                                android:id="@+id/constraintListPart2"
                                android:padding="8dp"
                                android:background="@drawable/custom_border_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center">
                                <ImageView
                                    android:id="@+id/ivPart2"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_part2_questions"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/ivPart2"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_marginBottom="3dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="16sp"
                                        android:text="Part 2"
                                        android:background="@drawable/bg_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:gravity="center"
                                        android:maxWidth="100dp"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="12sp"
                                        android:text="Hỏi đáp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:background="@drawable/bg_white"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:transitionName="part3"
                                android:id="@+id/constraintListPart3"
                                android:padding="8dp"
                                android:background="@drawable/custom_border_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center">
                                <ImageView
                                    android:id="@+id/ivPart3"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_part3_convertions"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/ivPart3"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:gravity="center|top"
                                        android:layout_marginBottom="3dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="16sp"
                                        android:text="Part 3"
                                        android:background="@drawable/bg_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:gravity="center"
                                        android:maxWidth="100dp"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="12sp"
                                        android:text="Đoạn hội thoại"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/bg_white"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:transitionName="part4"
                                android:id="@+id/constraintListPart4"
                                android:padding="8dp"
                                android:background="@drawable/custom_border_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center">
                                <ImageView
                                    android:id="@+id/ivPart4"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_part4_short_talks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/ivPart4"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_marginBottom="3dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="16sp"
                                        android:text="Part 4"
                                        android:background="@drawable/bg_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:gravity="center"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="12sp"
                                        android:text="Bài nói chuyện ngẵn"
                                        android:maxWidth="100dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_dark_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="15dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doc_hieu"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginBottom="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:background="@drawable/bg_white"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:transitionName="part5"
                                android:id="@+id/constraintListPart5"
                                android:padding="8dp"
                                android:background="@drawable/custom_border_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center">
                                <ImageView
                                    android:id="@+id/ivPart5"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_part5_incomplete_centences"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/ivPart5"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_marginBottom="3dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="16sp"
                                        android:text="Part 5"
                                        android:background="@drawable/bg_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:gravity="center"
                                        android:maxWidth="100dp"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="12sp"
                                        android:text="Điền vào chỗ trống"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/bg_white"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:transitionName="part6"
                                android:id="@+id/constraintListPart6"
                                android:padding="8dp"
                                android:background="@drawable/custom_border_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center">
                                <ImageView
                                    android:id="@+id/ivPart6"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_part6_text_completion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/ivPart6"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_marginBottom="3dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="16sp"
                                        android:text="Part 6"
                                        android:background="@drawable/bg_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:gravity="center"
                                        android:maxWidth="100dp"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="12sp"
                                        android:text="Hoàn thành văn bản"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:background="@drawable/bg_white"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:transitionName="part7"
                                android:id="@+id/constraintListPart7"
                                android:padding="8dp"
                                android:background="@drawable/custom_border_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center">
                                <ImageView
                                    android:id="@+id/ivPart7"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_part7_reading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/ivPart7"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_marginBottom="3dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="16sp"
                                        android:text="Part 7"
                                        android:background="@drawable/bg_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:gravity="center"
                                        android:maxWidth="100dp"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="12sp"
                                        android:text="Đọc hiểu văn bản"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="UselessLeaf">

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:background="#EE8A6F"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"/>

                <LinearLayout
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_dark_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="15dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/luyen_tap"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginBottom="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        tools:ignore="UselessParent">
                        <LinearLayout
                            android:background="@drawable/bg_white"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:transitionName="partListening"
                                android:id="@+id/constraintListListening"
                                android:padding="8dp"
                                android:background="@drawable/custom_border_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center">
                                <ImageView
                                    android:id="@+id/ivListen"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_practice_listening"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/ivListen"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_marginBottom="3dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="16sp"
                                        android:text="Listening"
                                        android:background="@drawable/bg_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:gravity="center"
                                        android:maxWidth="100dp"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="12sp"
                                        android:text="100 câu hỏi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/bg_white"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:transitionName="partReading"
                                android:id="@+id/constraintListReading"
                                android:padding="8dp"
                                android:background="@drawable/custom_border_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center">
                                <ImageView
                                    android:id="@+id/ivReading"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_practice_reading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/ivReading"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_marginBottom="3dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="16sp"
                                        android:text="Reading"
                                        android:background="@drawable/bg_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:gravity="center"
                                        android:maxWidth="100dp"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:textSize="12sp"
                                        android:text="100 câu hỏi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
